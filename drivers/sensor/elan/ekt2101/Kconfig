# EKT2101 Three Axis Magnetometer configuration options

# Copyright (c) 2018 Phil√©mon Jaermann
# SPDX-License-Identifier: Apache-2.0

menuconfig EKT2101
	bool "EKT2101 Three Axis Magnetometer"
	default y
	depends on DT_HAS_ST_EKT2101_ENABLED
	select I2C
	help
	  Enable driver for EKT2101 I2C-based triaxial magnetometer sensor.

config EKT2101_RANGE
	int "Magnetometer measurement range"
	depends on EKT2101
	range 1 7
	default 1
	help
	  1: +/-1.3 gauss
	  2: +/-1.9 gauss
	  3: +/-2.5 gauss
	  4: +/-4 gauss
	  5: +/-4.7 gauss
	  6: +/-5.6 gauss
	  7: +/-8.1 gauss

config EKT2101_ODR
	int "Data rate frequency"
	depends on EKT2101
	range 0 7
	default 0
	help
	  0: 0.75Hz
	  1: 1.5 Hz
	  2: 3Hz
	  3: 7.5Hz
	  4: 15Hz
	  5: 30Hz
	  6: 75Hz
	  7: 220Hz
